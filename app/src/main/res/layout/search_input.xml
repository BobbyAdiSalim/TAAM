    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="699dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/SearchHeader"
            android:layout_width="277dp"
            android:layout_height="55dp"
            android:fontFamily="@font/adlam_display"
            android:text="Search"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.046" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/LotLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="29dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintTop_toBottomOf="@id/SearchHeader"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <EditText
                android:id="@+id/LotNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/logintext"
                android:inputType="numberSigned"
                android:ems="10"
                android:hint="Type Lot#"
                android:text="" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/NameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="29dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintTop_toBottomOf="@id/LotLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <EditText
                android:id="@+id/LotName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/logintext"
                android:ems="10"
                android:hint="Type Name"
                android:text="" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/CategoryLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="29dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/NameLayout">

            <AutoCompleteTextView
                android:id="@+id/LotCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/logintext"
                android:ems="10"
                android:hint="Select Category"
                android:inputType="none"
                android:text=""/>


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/PeriodLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="29dp"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CategoryLayout">

            <AutoCompleteTextView
                android:id="@+id/LotPeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/logintext"
                android:ems="10"
                android:hint="Select Period"
                android:inputType="none"
                android:text=""/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/SortLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="29dp"
            android:layout_marginTop="29dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/PeriodLayout">

            <AutoCompleteTextView
                android:id="@+id/SortText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/logintext"
                android:ems="10"
                android:hint="Optional Sort By"
                android:inputType="none"
                android:text="" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/BackButton"
            android:layout_width="112dp"
            android:layout_height="54dp"
            android:background="@drawable/logintext"
            android:text="Back"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.953" />

        <Button
            android:id="@+id/ResultButton"
            android:layout_width="112dp"
            android:layout_height="54dp"
            android:text="Result"
            android:textAlignment="center"
            android:textSize="14sp"
            app:backgroundTint="#4372AD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.898"
            app:layout_constraintStart_toEndOf="@+id/BackButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.952" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>